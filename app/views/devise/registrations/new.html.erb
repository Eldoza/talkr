
<div class="container">
  <div class="border-form-div">
    <!-- <div class="register pull-left"> -->
        <div class="header panel-header">
          <h1>Sign up</h1>
          <h6 class="center"> It's free and always will be.</h6>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group clearfix panel-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, placeholder: 'e.g. Jon Snow' %>
          </div>

          <div class="form-group clearfix">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: 'JonSnow@email.com' %>
          </div>

          <div class="form-group clearfix">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off",placeholder: 'French Swear word' %>
          </div>

          <div class="form-group clearfix">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Say it again baby!' %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class:"btn btn-primary btn-danger"%>
          </div>
        <% end %>
        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div>




    <!-- </div> -->
  </div>
</div>
